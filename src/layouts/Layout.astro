---
import BaseHead from '@/components/BaseHead.astro';
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description='Perkumpulan Pelajar Indonesia'/>
  </head>
  <body class="font-sans">
    <Header />
    <main class="min-h-[80vh] mx-auto max-w-7xl">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  html {
    background-color: #f6fafd;
  }
</style>
